%h1 Listing team members

%table
  %thead
    %tr
      %th Name
      %th Short name
      %th Actions

  %tbody
    - @team_members.each do |team_member|
      %tr
        %td= team_member.name
        %td= team_member.short_name
        %td
          = link_to 'Show', admin_team_member_url(team_member.team, team_member)
          = link_to 'Edit', edit_admin_team_member_path(team_member.team, team_member)
          = link_to 'Destroy', admin_team_member_url(team_member.team, team_member), |
              :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New team member', new_admin_team_member_path
