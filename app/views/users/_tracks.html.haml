- no_select ||= false

%p
  %b
    Track count #{@user.track_ids.size}

%table.tracks
  %tr
    - unless no_select
      %th own
      %th to buy
    %th
      Name
  - tracks.each do |track|
    %tr
      - unless no_select
        %td
          = check_box_tag "user[track_ids][]", track.id, @user.track_ids.include?(track.id)
        %td
          = check_box_tag "user[track_ids][]", track.id, @user.track_ids.include?(track.id)
      %td
        = track.name
