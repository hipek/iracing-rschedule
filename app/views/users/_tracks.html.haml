- no_select ||= false

%table.tracks
  %tr
    - unless no_select
      %th Own
      %th To buy
    %th
      Name
  - tracks.each do |track|
    %tr
      - unless no_select
        %td
          = check_box_tag "user[track_ids][]", track.id, @user.own_track?(track.id)
        %td
          = check_box_tag "user[track_to_buy_ids][]", track.id, @user.to_buy_track?(track.id)
      %td
        = track.name
