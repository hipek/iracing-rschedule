= form_for @season, multipart: true do |f|
  - if @season.errors.any?
    #error_explanation
      %h2= "#{pluralize(@season.errors.count, "error")} prohibited this season from being saved:"
      %ul
        - @season.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :active
    = f.check_box :active

  .field
    = f.label :file
    = f.file_field :file

  .actions
    = f.submit 'Save'
